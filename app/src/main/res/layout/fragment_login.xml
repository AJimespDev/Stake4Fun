<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.128"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/wickedmouse"
            android:shadowColor="@android:color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1"
            android:text="Stake4Fun"
            android:textColor="#fdbc03"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="@id/logo"
            app:layout_constraintVertical_bias="0.489" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:id="@+id/etEmail"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/manropemedium"
            android:gravity="center"
            android:hint="@string/introduce_tu_correo"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/logo"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:id="@+id/etPassword"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/manropemedium"
            android:gravity="center"
            android:hint="@string/password"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/etEmail"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogIn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_orange_design"
            android:elevation="10dp"
            android:fontFamily="@font/manropesemibold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/log_in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/etPassword"
            tools:layout_editor_absoluteX="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvResetPasswordLogginIn"
            android:layout_marginTop="62dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLogIn"
            android:fontFamily="@font/manropemedium"
            android:paddingVertical="10dp"
            android:text="@string/has_olvidado_la_password"
            android:textColor="#243656"
            android:textSize="12sp"/>


        <FrameLayout
            android:id="@+id/line"
            android:layout_width="65dp"
            android:layout_height="2dp"
            android:layout_marginTop="29dp"
            android:background="#F5F7FA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResetPasswordLogginIn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/manropemedium"
            android:text="@string/sign_up"
            android:textColor="#243656"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>